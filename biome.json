{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "extends": ["./node_modules/@kibertoad/biome-config/configs/biome-package.json"],
  "linter": {
    "rules": {
      "correctness": {
        "noInnerDeclarations": "off"
      },
      "performance": {
        "noBarrelFile": "off"
      },
      "style": {
        "noVar": "off"
      },
      "suspicious": {
        "noDoubleEquals": "off",
        "noMisleadingCharacterClass": "off"
      }
    }
  }
}
